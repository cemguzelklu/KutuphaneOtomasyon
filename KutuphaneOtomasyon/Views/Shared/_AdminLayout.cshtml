    <style>
        /* ========= KÜTÜPHANE PALETİ (örnek sayfayla aynı) ========= */
        :root {
            --accent: #8b5cf6;
            --accent-600: #7c3aed;
            --ink: #0f172a;
            --muted: #64748b;
            --card: #ffffff;
            --soft: #f8fafc;
            --thead: #0b1220;
            --thead-text: #fff;
            --row-hover: #f8fafc;
            /* FIX: sidebar genişlikleri (açık/mini) */
            --sidebar-open: 240px;
            --sidebar-mini: 72px;
        }

        /* ========= Topbar ========= */
        .topbar {
            background: #fff !important;
            box-shadow: 0 4px 16px rgba(2,6,23,.06);
            transition: background-color .25s ease, box-shadow .25s ease;
        }

            /* FIX: navbar-dark -> light görünüm; metinler görünür olsun */
            .topbar .navbar {
                background: transparent !important;
            }

        .navbar-light .navbar-nav .nav-link,
        .navbar-light .navbar-brand,
        .navbar-light .navbar-nav .nav-link i {
            color: var(--ink) !important;
        }

            .navbar-light .navbar-nav .nav-link:hover {
                color: var(--accent-600) !important;
            }

        /* Dropdown görünürlük */
        .topbar .dropdown-menu {
            border: 0;
            border-radius: 12px;
            box-shadow: 0 12px 30px rgba(2,6,23,.12);
        }

        .topbar .dropdown-item {
            color: var(--ink);
        }

            .topbar .dropdown-item:hover {
                background: rgba(2,6,23,.04);
            }

        /* Search dropdown */
        .app-search {
            display: none;
            right: 0;
            left: auto;
            box-shadow: 0 8px 24px rgba(2,6,23,.12);
        }

            .app-search.show {
                display: block;
            }

            .app-search .form-control {
                border-color: rgba(2,6,23,.08);
            }

            .app-search .srh-btn {
                color: var(--muted);
                border: none;
                background: none;
            }

        /* ========= Sidebar ========= */
        .left-sidebar, .sidebar-nav ul, .sidebar-nav ul li a {
            background: var(--thead) !important;
        }

        .left-sidebar {
            width: var(--sidebar-open);
            transition: width .25s ease, box-shadow .25s ease;
        }

        .sidebar-item .sidebar-link {
            color: #cbd5e1 !important;
            border-radius: 10px;
            margin: 2px 10px;
            transition: background-color .2s ease, color .2s ease;
        }

            .sidebar-item .sidebar-link:hover {
                background: rgba(139,92,246,.12) !important;
                color: #fff !important;
            }

            .sidebar-item .sidebar-link.active,
            .sidebar-item .sidebar-link[aria-expanded="true"] {
                background: linear-gradient(135deg, var(--accent), var(--accent-600)) !important;
                color: #fff !important;
                box-shadow: 0 8px 22px rgba(139,92,246,.35);
            }

        .sidebar-nav .has-arrow::after {
            border-color: #cbd5e1;
        }

        /* ========= İçerik/Kartlar ========= */
        .page-wrapper {
            background: var(--soft);
            margin-left: var(--sidebar-open); /* FIX: içerik kaydırma */
            transition: margin-left .25s ease, background-color .25s ease;
        }

        .card, .card-hover, .comment-widgets, .todo-widget, .chat-box {
            border: 0;
            border-radius: 16px;
            box-shadow: 0 10px 30px rgba(2,6,23,.08);
            transition: box-shadow .25s ease, transform .18s ease;
        }

            .card .card-title, .card h4, h5, h6 {
                color: var(--ink);
            }

        .text-muted, .font-light, small {
            color: var(--muted) !important;
        }

        /* ========= Butonlar ========= */
        .btn-success, .btn-cyan, .btn-info, .btn-primary, .btn-danger {
            border: 0;
            color: #fff !important;
            background: linear-gradient(135deg, var(--accent), var(--accent-600));
            box-shadow: 0 8px 22px rgba(139,92,246,.35);
            transition: filter .15s ease, box-shadow .25s ease;
        }

            .btn-success:hover, .btn-cyan:hover, .btn-info:hover, .btn-primary:hover, .btn-danger:hover {
                filter: brightness(0.95);
            }

        /* ========= DataTables başlık & hover ========= */
        table.dataTable thead th {
            background: var(--thead);
            color: var(--thead-text);
        }

        table.dataTable tbody tr:hover {
            background: var(--row-hover);
        }

        .dataTables_wrapper .dt-buttons .btn {
            border-radius: 10px;
        }

        /* ========= Preloader accent ========= */
        .preloader .lds-ripple div {
            border-color: var(--accent) !important;
        }

        .navbar-brand img.light-logo {
            filter: none !important;
        }

        /* ========= MINI SIDEBAR (ikon-only) ========= */
