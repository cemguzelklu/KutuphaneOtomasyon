        header.topbar.topbar[data-navbarbg="skin5"] .navbar,
        header.topbar.topbar[data-navbarbg="skin5"] .navbar-collapse,
        header.topbar .navbar-header.navbar-header[data-logobg="skin5"] {
            background-color: #0b1220 !important;
