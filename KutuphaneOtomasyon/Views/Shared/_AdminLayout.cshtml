            }

        header.topbar .search-box .app-search {
            background: #0b1220 !important;
            box-shadow: 0 8px 24px rgba(2,6,23,.45) !important;
        }

            header.topbar .search-box .app-search .form-control {
                background: rgba(255,255,255,.06);
                color: #e5e7eb;
                border-color: rgba(255,255,255,.12);
            }

                header.topbar .search-box .app-search .form-control::placeholder {
                    color: #94a3b8;
                }

            header.topbar .search-box .app-search .srh-btn {
                color: #cbd5e1 !important;
            }

        /* 5) Navbar arka planını transparan tut (üstteki topbar rengi görünsün) */
        header.topbar .navbar {
            background: transparent !important;
        }

        :root {
            --topbar-h: 64px;
        }
        /* topbar yüksekliği; gerekiyorsa 56px yap */

        @@media (max-width: 991.98px) {
            /* İçerik sola kaymasın */
