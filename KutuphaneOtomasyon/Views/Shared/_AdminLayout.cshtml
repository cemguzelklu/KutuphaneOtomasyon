        (function () {
          // Search ikonuna tıkla → aç/kapa
          $(document).on('click', '.search-box .nav-link', function (e) {
              e.preventDefault();
              const $form = $(this).siblings('.app-search');
              $form.toggleClass('show');
              if ($form.hasClass('show')) $form.find('input').trigger('focus');
          });
          // Search alanı dışına tıklanınca kapan
          $(document).on('click', function (e) {
              if (!$(e.target).closest('.search-box').length) $('.app-search').removeClass('show');
          });

          // FIX: Sidebar mini toggler (ikon-only mod). İkona veya kapsayıcıya tıklanması yeterli.
          $(document).on('click', '.sidebartoggler, .sidebartoggler *', function (e) {
              e.preventDefault();
              $('#main-wrapper').toggleClass('mini-sidebar');
              // durum kalıcı olsun
              localStorage.setItem('miniSidebar', $('#main-wrapper').hasClass('mini-sidebar') ? '1' : '0');

              // scroll-bar yeniden hesapla (varsa)
              try { $('.left-sidebar').perfectScrollbar('update'); } catch(err) {}
          });

          // Sayfa yüklenince son durumu uygula
          $(function () {
              if (localStorage.getItem('miniSidebar') === '1') {
                  $('#main-wrapper').addClass('mini-sidebar');
              }
              // Mini modda hover ipucu için title at
              $('#sidebarnav .sidebar-link').each(function () {
                  var t = $(this).find('.hide-menu').text().trim();
                  if (t && !$(this).attr('title')) $(this).attr('title', t);
              });
          });

          // Mobil nav toggler fallback
          $('.nav-toggler').on('click', function (e) {
              e.preventDefault();
              $('body, #main-wrapper').toggleClass('show-sidebar');
          });
        })();
    </script>
