        }

        #main-wrapper.mini-sidebar .page-wrapper {
            margin-left: var(--sidebar-mini);
        }

        /* Alt başlıklar ve hover’lar için yumuşaklık */
        .sidebar-nav ul {
            transition: padding .25s ease;
        }
        /* ========= TOPBAR'ı SIDEBAR (#0b1220) ile birebir yap – skin5'i de EZER ========= */

        /* 1) Topbar + içindeki tüm katmanlar (#0b1220) */
        #main-wrapper > header.topbar[data-navbarbg],
        #main-wrapper > header.topbar[data-navbarbg] .top-navbar,
        #main-wrapper > header.topbar[data-navbarbg] .navbar,
        #main-wrapper > header.topbar[data-navbarbg] .navbar-collapse,
        #main-wrapper > header.topbar .navbar-header[data-logobg] {
