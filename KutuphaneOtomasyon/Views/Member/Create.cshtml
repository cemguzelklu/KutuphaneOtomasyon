@model KutuphaneOtomasyon.Models.Member
@{
    ViewData["Title"] = "Yeni Üye Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Yeni Üye Ekle</h3>
    </div>
    <div class="card-body">
        <form asp-controller="Member" asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MemberType" class="control-label"></label>
                <select asp-for="MemberType" class="form-control" asp-items="@(new SelectList(ViewBag.MemberTypes, "Value", "Text"))">
                    <option value="">Üye Tipi Seçiniz</option>
                </select>
                <span asp-validation-for="MemberType" class="text-danger"></span>
            </div>


          
            <button type="submit" class="btn btn-primary mt-2">Kaydet</button>
        </form>
    </div>
    <script>
        document.querySelector('form').addEventListener('submit', function (e) {
            alert("Form gönderiliyor!");
        });
    </script>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
