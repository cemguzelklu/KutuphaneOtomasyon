@model KutuphaneOtomasyon.Models.Member
@{
    ViewData["Title"] = "Üye Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form asp-action="Update" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="MemberId" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MemberType" class="control-label"></label>
        <select asp-for="MemberType" class="form-control" asp-items="@(new SelectList(ViewBag.MemberTypes, "Value", "Text"))">
            <option value="">Üye Tipi Seçiniz</option>
        </select>
        <span asp-validation-for="MemberType" class="text-danger"></span>
    </div>
    

    
    <button type="submit" class="btn btn-primary mt-2">Güncelle</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

