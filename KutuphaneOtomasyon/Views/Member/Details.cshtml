@model KutuphaneOtomasyon.ViewModels.Members.MemberDetailsVm
@{
    ViewData["Title"] = "Üye Detayları";
}

<div class="container mt-4">
    <h2>@Model.Member.Name</h2>
    <p class="text-muted">@Model.Member.Email | @Model.Member.Phone</p>
    <hr />

    <!-- Risk Skoru -->
    @if (Model.Risk != null)
    {
        <div class="mb-4">
            <h4>Risk Durumu</h4>
            <div class="alert @(Model.Risk.Level == "High" ? "alert-danger" : (Model.Risk.Level == "Medium" ? "alert-warning" : "alert-success"))">
                <strong>Skor:</strong> @Model.Risk.Score / 100
                <br />
                <strong>Seviye:</strong> @Model.Risk.Level
                <br />
                <strong>Gecikmiş Kitap:</strong> @Model.Risk.OverdueCount
                <br />
                <strong>Yakında Teslim:</strong> @Model.Risk.DueSoonCount
                <br />
                <em>@Model.Risk.Summary</em>
            </div>

            <h6>Detaylar:</h6>
            <ul>
                @foreach (var item in Model.Risk.Items)
                {
                    <li>
                        <strong>@item.Title:</strong> @item.Status (Katkı: @item.Weight)
                    </li>
                }
            </ul>
        </div>
    }
    @if (Model.Risk != null)
    {
        @await Html.PartialAsync("_RiskCard", Model.Risk)
    }
    else
    {
        <div class="alert alert-light">Risk bilgisi hesaplanamadı.</div>
    }
    <!-- İstatistikler -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card p-3 shadow-sm">
                <strong>Toplam Ödünç:</strong> @Model.TotalBorrowCount
            </div>
        </div>
        <div class="col-md-4">
            <div class="card p-3 shadow-sm">
                <strong>Geç Getirilen:</strong> @Model.LateReturnCount
            </div>
        </div>
        <div class="col-md-4">
            <div class="card p-3 shadow-sm">
                <strong>Zamanında Getirme Oranı:</strong> @($"{Model.OnTimeRate:P0}")
            </div>
        </div>
    </div>

    <!-- Şu anki kitaplar -->
    <h4>Şu An Elinde Olan Kitaplar</h4>
    <table class="table table-bordered">
        <thead class="table-light">
            <tr>
                <th>Başlık</th>
                <th>Yazar</th>
                <th>Alım Tarihi</th>
                <th>Son Teslim</th>
                <th>Durum</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var b in Model.CurrentBorrows)
            {
                <tr class="@(b.IsOverdue ? "table-danger" : "")">
                    <td>@b.Title</td>
                    <td>@b.Author</td>
                    <td>@b.BorrowDate.ToShortDateString()</td>
                    <td>@b.DueDate?.ToShortDateString()</td>
                    <td>
                        @if (b.IsReturned)
                        {
                            <span class="badge bg-success">İade Edildi</span>
                        }
                        else if (b.IsOverdue)
                        {
                            <span class="badge bg-danger">Gecikti</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Devam Ediyor</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Geçmiş -->
    <h4>Ödünç Geçmişi</h4>
    <table class="table table-sm table-striped">
        <thead class="table-light">
            <tr>
                <th>Başlık</th>
                <th>Yazar</th>
                <th>Alım Tarihi</th>
                <th>İade Tarihi</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var b in Model.History)
            {
                <tr>
                    <td>@b.Title</td>
                    <td>@b.Author</td>
                    <td>@b.BorrowDate.ToShortDateString()</td>
                    <td>@b.ReturnDate?.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>

    @* --- ÖNERİLER (AI Toggle) --- *@
    <div class="d-flex align-items-center mb-2">
        <h5 class="mb-0">Öneriler</h5>

        @if (Model.AiEnabled)
        {
            <label class="ml-3 mb-0" style="cursor:pointer;">
                <input type="checkbox" id="aiToggle" @(Model.UseAi ? "checked" : "") />
                <span class="ml-1">AI sıralı</span>
            </label>
            <small class="text-muted ml-2">
                @(Model.UseAi ? "AI aktif" : "Klasik")
                @if (Model.SuggestionsGeneratedAt.HasValue)
                {
                    <text> · güncelleme: @Model.SuggestionsGeneratedAt.Value.ToString("dd.MM.yyyy HH:mm")</text>
                }
            </small>
        }
        else
        {
            <span class="badge badge-secondary ml-2">AI kapalı</span>
        }
    </div>

    <div class="card border-primary mb-3">
        <div class="card-header">
            @(Model.UseAi && Model.AiEnabled ? "AI Önerileri" : "Klasik Öneriler")
            @if (Model.UseAi && Model.AiEnabled)
            {
                <span class="badge badge-primary ml-2">AI sıraladı</span>
            }
        </div>
        <div class="card-body">
            @if (Model.Suggestions?.Any() == true)
            {
                foreach (var b in Model.Suggestions)
                {
                    <div class="py-2">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="mr-2">
                                <strong>@b.Title</strong>
                                @if (!string.IsNullOrWhiteSpace(b.Author))
                                {
                                    <small class="text-muted"> @b.Author</small>
                                }
                                <div>
                                    <small class="text-muted">Stok: @b.AvailableCopies</small>
                                </div>
                            </div>

                            <div class="text-nowrap">
                                <button class="btn btn-sm btn-outline-secondary"
                                        data-toggle="collapse"
                                        data-target="#why-@b.BookId"
                                        aria-expanded="false"
                                        aria-controls="why-@b.BookId">
                                    Neden?
                                </button>
                            </div>
                        </div>

                        <div id="why-@b.BookId" class="collapse mt-1">
                            <small class="text-muted">
                                @(!string.IsNullOrWhiteSpace(b.Reason) ? b.Reason : "Açıklama yok")
                            </small>
                        </div>
                        <hr class="my-2" />
                    </div>
                }
            }
            else
            {
                <small class="text-muted">Öneri bulunamadı.</small>
            }
        </div>
    </div>
</div>
@section Scripts {
    <script>
        (function(){
          var t = document.getElementById('aiToggle');
          if(!t) return;
          t.addEventListener('change', function(e){
            var url = new URL(window.location.href);
            url.searchParams.set('useAi', e.target.checked ? 'true' : 'false');
            window.location.href = url.toString();
          });
        })();
    </script>
}